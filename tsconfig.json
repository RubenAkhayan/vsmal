{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["client", "server"]
}
